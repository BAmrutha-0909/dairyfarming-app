<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutAppLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/imgAppIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="App Logo"
            android:src="@mipmap/app_logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DairyFarming"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- App Version -->
        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- App Description -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DairyFarming helps dairy farmers manage their daily operations efficiently, including tracking sales, profits, and animal health."
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Developer Info -->
        <TextView
            android:id="@+id/textViewDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by: Your Name / Company"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="8dp" />

        <!-- Contact Info -->
        <TextView
            android:id="@+id/textViewContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: support@dairyfarming.com"
            android:textColor="#444444"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
